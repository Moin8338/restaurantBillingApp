<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:theme="@style/AppTheme.Toolbar">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set Business Detail"
                    android:textColor="@color/black"
                    android:layout_gravity="right"
                    android:layout_marginEnd="20dp"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.AppBarLayout>
        
        <View
           android:background="@color/green"
           android:layout_width="match_parent"
           android:layout_height="2dp" />

        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="500dp"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingRight="40dp"
                    android:paddingLeft="40dp">


                    <TextView
                        android:id="@+id/restaurantNameText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Restaurant Name"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/restaurantName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/adittext_background"
                        android:ems="10"
                        android:hint="Enter Restaurant Name"
                        android:textColorHint="#7f8285"
                        android:textColor="@color/black"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textSize="18dp" />


                    <TextView
                        android:id="@+id/ownerNameText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Owner Name"
                        android:textColor="#000000"
                        android:layout_marginTop="25dp"
                        android:textSize="20dp"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/ownerName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/adittext_background"
                        android:ems="10"
                        android:hint="Enter Owner Name"
                        android:textColorHint="#7f8285"
                        android:textColor="@color/black"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textSize="18dp" />



                    <TextView
                        android:id="@+id/restaurantGstText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text="GST Number"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/restaurantGst"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/black"
                        android:background="@drawable/adittext_background"
                        android:ems="10"
                        android:hint="Enter Gst Number"
                        android:textColorHint="#7f8285"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/RestaurantAddressText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text="Restaurant Address"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/RestaurantAddress"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/black"
                        android:background="@drawable/adittext_background"
                        android:ems="10"
                        android:hint="Enter Address"
                        android:textColorHint="#7f8285"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textSize="18dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/SetBussinessDetail"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/login_btn_background"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:text="Set Detail"
                        android:layout_marginTop="32dp"
                        android:textColor="#ffffff" />



            </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>